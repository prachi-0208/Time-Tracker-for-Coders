{
  "manifest_version": 3,
  "name": "Time Tracker for Coders",
  "version": "1.0",
  "description": "Tracks time spent on coding platforms like LeetCode, Codeforces, and GitHub.",
  "permissions": [
    "storage",
    "tabs"
  ],
  "host_permissions": [
    "*://leetcode.com/*",
    "*://codeforces.com/*",
    "*://github.com/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup/popup.html",
    "default_icon": {
      "16": "icons/icon.jpg",
      "48": "icons/icon.jpg",
      "128": "icons/icon.jpg"
    }
  },
  "icons": {
    "16": "icons/icon.jpg",
    "48": "icons/icon.jpg",
    "128": "icons/icon.jpg"
  }
}
